  <script>
    const generateBtn = document.getElementById("generateBtn");
    const videoUrlInput = document.getElementById("videoUrl");
    const statusDot = document.getElementById("statusDot");
    const statusText = document.getElementById("statusText");
    const shortsContainer = document.getElementById("shortsContainer");
    const demoFill = document.getElementById("demoFill");

    // Fill demo link
    demoFill.addEventListener("click", () => {
      videoUrlInput.value = "https://www.youtube.com/watch?v=dQw4w9WgXcQ";
      videoUrlInput.focus();
    });

    // Simple URL validation
    function isValidUrl(url) {
      try {
        new URL(url);
        return true;
      } catch (e) {
        return false;
      }
    }

    function setStatus(state, message) {
      statusDot.classList.remove("idle", "success", "error");
      statusDot.classList.add(state);
      statusText.innerHTML = message;
    }

    // MAIN HANDLER
    generateBtn.addEventListener("click", async () => {
      const url = videoUrlInput.value.trim();

      if (!url || !isValidUrl(url)) {
        setStatus(
          "error",
          "<strong>Error</strong> ¬∑ Please enter a valid video URL."
        );
        videoUrlInput.focus();
        return;
      }

      generateBtn.disabled = true;
      setStatus(
        "accent",
        "<strong>Processing‚Ä¶</strong> ¬∑ Analyzing and generating multiple shorts."
      );
      statusDot.classList.remove("idle", "success", "error");
      // fallback color when using "accent" pseudo-state
      statusDot.style.background = "var(--accent)";
      statusDot.style.boxShadow = "0 0 10px rgba(99, 102, 241, 0.9)";

      // Clear old shorts
      shortsContainer.innerHTML =
        '<p class="placeholder-text">Processing your video‚Ä¶ this is a simulated preview. Connect this UI to a backend for real results.</p>';

      // üîß TODO: Replace this simulated delay + mock data
      // with a real API call to your backend:
      //
      // const response = await fetch("/api/generate-shorts", {
      //   method: "POST",
      //   headers: { "Content-Type": "application/json" },
      //   body: JSON.stringify({ videoUrl: url })
      // });
      // const data = await response.json();
      //
      // Then render `data.shorts` instead of mockShorts.

      // Simulate API delay
      await new Promise((resolve) => setTimeout(resolve, 1200));

      const mockShorts = [
        {
          id: 1,
          title: "Hook: The moment everything changes",
          duration: "0:54",
          hook: "Crazy twist at 00:37",
          value: "High emotion ¬∑ Perfect hook",
        },
        {
          id: 2,
          title: "This 45-second breakdown is gold",
          duration: "0:45",
          hook: "Big reveal in 5 seconds",
          value: "High value ¬∑ Educational",
        },
        {
          id: 3,
          title: "People will replay this part",
          duration: "0:59",
          hook: "Strong story arc",
          value: "Retention-focused ¬∑ Viral-ready",
        },
      ];

      renderShorts(mockShorts);
      setStatus(
        "success",
        "<strong>Ready</strong> ¬∑ Generated preview shorts. Connect your backend for real clips."
      );
      generateBtn.disabled = false;
    });

    function renderShorts(shorts) {
      if (!shorts || shorts.length === 0) {
        shortsContainer.innerHTML =
          '<p class="placeholder-text">No shorts generated yet.</p>';
        return;
      }

      const grid = document.createElement("div");
      grid.className = "shorts-list";

      shorts.forEach((short, index) => {
        const card = document.createElement("article");
        card.className = "short-card";

        card.innerHTML = `
          <div class="short-thumb">
            <div class="short-thumb-badge">
              <span class="short-thumb-badge-dot"></span>
              Clip #${index + 1}
            </div>
            <div class="short-thumb-time">${short.duration}</div>
          </div>
          <div class="short-meta">
            <div class="short-title">${short.title}</div>
            <div class="short-details">
              ${short.hook}<br />
              <span>${short.value}</span>
            </div>
          </div>
          <div class="short-actions">
            <button class="btn-ghost">
              <span>‚¨á</span> Download
            </button>
            <button class="btn-ghost">
              <span>üëÅ</span> Preview
            </button>
          </div>
        `;

        grid.appendChild(card);
      });

      shortsContainer.innerHTML = "";
      shortsContainer.appendChild(grid);
    }
  </script>
</body>
</html>
